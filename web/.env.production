# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/5wh-news

# JWT Secret (Use a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server URLs
CLIENT_URL=http://ec2-16-52-123-203.ca-central-1.compute.amazonaws.com:5000
SERVER_URL=http://ec2-16-52-123-203.ca-central-1.compute.amazonaws.com:5000

# React App API Configuration
REACT_APP_API_URL=http://ec2-16-52-123-203.ca-central-1.compute.amazonaws.com:5000

# File Upload Settings
MAX_FILE_SIZE=500MB
UPLOAD_PATH=/home/ubuntu/5wh/web/uploads

# CORS Settings - Allow multiple origins
CORS_ORIGINS=http://ec2-16-52-123-203.ca-central-1.compute.amazonaws.com:5000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# Rate Limiting (Enable for production)
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Content Scheduler
SCHEDULER_INTERVAL_MS=60000

# Email Configuration (for notifications and contact forms)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@5whmedia.com

# Admin Credentials
ADMIN_EMAIL=admin@5whmedia.com
ADMIN_PASSWORD=admin123456

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# YouTube Integration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-youtube-channel-id

# Weather API (for weather widgets)
REACT_APP_WEATHER_API_KEY=your-weather-api-key

# Google Services
GOOGLE_ANALYTICS_ID=your-google-analytics-id
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ca-central-1
AWS_S3_BUCKET=your-s3-bucket-name

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.weatherapi.com;

# SSL Configuration (for HTTPS setup)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24h
DB_BACKUP_RETENTION=7d

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/home/ubuntu/5wh/web/logs/app.log

# Push Notifications (for mobile app)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@5whmedia.com

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Content Delivery Network (CDN)
CDN_URL=https://cdn.5whmedia.com
STATIC_FILES_URL=https://cdn.5whmedia.com/static

# API Rate Limits per endpoint
API_NEWS_RATE_LIMIT=100
API_OPINIONS_RATE_LIMIT=50
API_VIDEOS_RATE_LIMIT=30

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Third-party Integrations
RSS_FEED_INTERVAL=3600000
RSS_MAX_ARTICLES=50
IMAGE_SEARCH_API_KEY=your-image-search-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Domain and SSL
DOMAIN_NAME=yourdomain.com
SSL_ENABLED=false
FORCE_HTTPS=false

# Performance Settings
COMPRESSION_ENABLED=true
CACHE_MAX_AGE=3600
STATIC_CACHE_MAX_AGE=31536000
